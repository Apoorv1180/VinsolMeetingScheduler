<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="@dimen/dimen30dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.activity.ScheduleMeetingFormActivity">

    <Button
        style="@style/spinner_style"
        android:textAlignment="textStart"
        android:padding="@dimen/dimen10dp"
        android:layout_margin="@dimen/dimen5dp"
        android:hint="@string/meeting_date"
        android:layout_height="wrap_content"
        android:id="@+id/meeting_date"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:textAlignment="textStart"
        android:padding="@dimen/dimen10dp"
        android:layout_margin="@dimen/dimen5dp"
        style="@style/spinner_style"
        android:hint="@string/start_time"
        android:layout_height="wrap_content"
        android:id="@+id/start_time"/>
    <Button
        android:layout_width="wrap_content"
        android:textAlignment="textStart"
        android:layout_weight="1"
        android:padding="@dimen/dimen10dp"
        android:layout_margin="@dimen/dimen5dp"
        android:layout_height="wrap_content"
        style="@style/spinner_style"
        android:hint="@string/end_time"
        android:id="@+id/end_time"/>
    </LinearLayout>

    <EditText
        android:id="@+id/meeting_description"
        android:layout_margin="@dimen/dimen5dp"
        android:textAlignment="textStart"
        android:padding="@dimen/dimen10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/meeting_description"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/submit"
        android:layout_margin="@dimen/dimen5dp"
        android:text="@string/submit"/>

</LinearLayout>